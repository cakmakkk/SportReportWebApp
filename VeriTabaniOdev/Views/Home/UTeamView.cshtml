<h1>Update Team: @Model?.Teamname"</h1>
<form asp-action="UpdateTeam" method="post">
    <input type="hidden" name="Teamid" value="@Model?.Teamid" />
    <label>Team Name: <input type="text" name="Teamname" value="@Model?.Teamname" /></label>
    <label>League ID: <input type="number" name="Leagueid" value="@Model?.Leagueid" /></label>
    <label>City: <input type="text" name="City" value="@Model?.City" /></label>
    <label>Points: <input type="number" name="Points" value="@Model?.Points" /></label>
    <label>Goals Scored: <input type="number" name="Goalsscored" value="@Model?.Goalsscored" /></label>
    <label>Goals Conceded: <input type="number" name="Goalsconceded" value="@Model?.Goalsconceded" /></label>
    <label>Wins: <input type="number" name="Wins" value="@Model?.Wins" /></label>
    <label>Draws: <input type="number" name="Draws" value="@Model?.Draws" /></label>
    <label>Losses: <input type="number" name="Losses" value="@Model?.Losses" /></label>
    <label>League Position: <input type="number" name="Leagueposition" value="@Model?.Leagueposition" /></label>
    <button type="submit">Update</button>
</form>
